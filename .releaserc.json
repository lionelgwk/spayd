{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "v0feat", "release": "patch" },
          { "type": "v0fix", "release": "patch" },
          { "type": "v0breaking", "release": "minor" },
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "chore", "release": false },
          { "type": "docs", "release": false },
          { "type": "test", "release": false },
          { "type": "ci", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "v0feat", "section": "ğŸŒŸ New Features (v0)" },
            { "type": "v0fix", "section": "ğŸ› Fixes (v0)" },
            { "type": "v0breaking", "section": "âš ï¸ Breaking Changes (v0)" },
            { "type": "feat", "section": "ğŸŒŸ New Features" },
            { "type": "fix", "section": "ğŸ› Fixes" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "refactor", "section": "ğŸ§¼ Code Refactoring" },
            { "type": "docs", "section": "ğŸ“ Documentation" },
            { "type": "test", "section": "ğŸ§ª Tests" },
            { "type": "chore", "section": "ğŸ§¹ Maintenance" },
            { "type": "style", "section": "ğŸ¨ Code Style" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}\n\n[skip ci]"
      }
    ]
  ]
}
